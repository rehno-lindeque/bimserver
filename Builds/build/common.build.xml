		<copy file="${buildtargets}/${target}/servertype.txt" todir="builds/BuildJar/www" overwrite="true" />
		<copy todir="builds/BuildJar/www/META-INF" overwrite="true">
			<fileset file="${buildtargets}/shared/context.xml" />
